/* 横向滚动条 */

.scroll-x {
  white-space: nowrap;
  width: 100%;
}

.scroll-x view {
  display: inline-block;
  width: 15%;
  text-align: center;
  font-size: 28rpx;
  margin-left: 26rpx;
  color: #444;
  line-height: 70rpx;
}

/* banner图 */

.banner {
  height: 328rpx;
}

.banner image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 为您推荐 */

.recommond {
  box-shadow: border-box;
  padding-left: 26rpx;
  font-size: 38rpx;
  font-weight: 700;
  line-height: 80rpx;
}

.recommond text {
  border-bottom: 3px solid #ffd323;
  padding-bottom: 10rpx;
}

/* 推荐产品 */

.product-box {
  box-sizing: border-box;
  padding: 26rpx;
}

.product {
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-item {
  width: 49.5%;
  margin-bottom: 8rpx;
}

.product-item image {
  height: 360rpx;
  width: 100%;
}

.product-title {
  font-size: 26rpx;
  color: #505050;
  text-align: left;
  line-height: 17px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-price {
  box-sizing: border-box;
}

.product-price .new {
  color: #0e0e0e;
  font-size: 28rpx;
  font-weight: 700;
  margin-top: 10rpx;
}

.product-price .member {
  display: inline-block;
  background: #333;
  box-sizing: border-box;
  padding: 8rpx 12rpx;
  margin-left: 10rpx;
  color: #bfb2a3;
  font-weight: normal;
  font-size: 26rpx;
  border-radius: 16rpx;
}

.product-price .old {
  margin-top: 10rpx;
  color: #999;
  font-size: 26rpx;
}

.product-price .old text:nth-child(2) {
  text-decoration: line-through;
}
.active {
  color: #f00 !important;
}
.none {
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 30rpx;
  color: #444;
  text-align: center
}