.title {
  box-sizing: border-box;
  padding: 16rpx;
  line-height: 40rpx;
  font-size: 32rpx;
}
.product-box {
  box-sizing: border-box;
  padding: 0 16rpx;
}
.product {
  box-sizing: border-box;
}
.product-item {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}
.product-show {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.product-show image {
  width: 100%;
  height: 100%;
  display: block;
}
.product-context {
  flex: 1;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}
.product-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}
.product-rate {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 12rpx;
}
.product-start {
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.product-start image {
  width: 24rpx;
  height: 24rpx;
}
.product-score {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
}
.product-distance {
  font-size: 28rpx;
  color: #666;
}
.product-address {
  box-sizing: border-box;
  font-size: 30rpx;
  color: #666;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.none {
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 30rpx;
  text-align: center;
  color: #444
}