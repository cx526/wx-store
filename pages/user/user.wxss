.noLogin {
  box-sizing: border-box;
}

.logo {
  width: 220rpx;
  height: 170rpx;
  margin: 0 auto;
  padding-top: 80rpx;
  justify-content: space-between;
  flex: 1;
}

.logo image {
  width: 100%;
  height: 100%;
}

.des {
  font-size: 33rpx;
}

.des view {
  text-align: center;
  color: #c8c7cc;
}
.btn {
  width: 100%;
  box-sizing: border-box;
  position: absolute;
  bottom: 160rpx;
  padding:  0 20%;
}
.btn button {
  width: 100%;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
}
.login {
  margin-bottom: 20rpx
}


